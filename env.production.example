NODE_ENV=production

# PostgreSQL
POSTGRES_USER=ponatech_user0045
POSTGRES_PASSWORD=CHANGE_ME_SECURE_PASSWORD
POSTGRES_DB=ponatech_db
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
DATABASE_URL=postgresql://ponatech_user0045:CHANGE_ME_SECURE_PASSWORD@postgres:5432/ponatech_db?schema=public

# Redis
REDIS_URL=redis://redis:6379
REDIS_PORT=6379

# Service Ports
AUTH_GRPC_PORT=50050
AUTH_HTTP_PORT=4000
CATALOG_GRPC_PORT=50060
CATALOG_HTTP_PORT=5000

# JWT
JWT_SECRET=GENERATE_WITH_openssl_rand_-base64_64
JWT_EXPIRES_IN=3600s
REFRESH_TOKEN_EXPIRES_IN=30d

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=60000

# MinIO
MINIO_ROOT_USER=ponatech_minio_0045
MINIO_ROOT_PASSWORD=CHANGE_ME_SECURE_PASSWORD
MINIO_PORT=9000
MINIO_CONSOLE_PORT=9001
MINIO_ENDPOINT=minio
MINIO_PUBLIC_ENDPOINT=ponatech.ru
MINIO_PUBLIC_PORT=443

# Frontend API URLs
NEXT_PUBLIC_API_URL=https://ponatech.ru/api/catalog
NEXT_PUBLIC_AUTH_API_URL=https://ponatech.ru/api/auth
NEXT_PUBLIC_CATALOG_API_URL=https://ponatech.ru/api/catalog

# CORS
CORS_ORIGINS=https://ponatech.ru,https://www.ponatech.ru
